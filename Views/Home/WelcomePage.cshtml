@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager;
@model System.Security.Claims.ClaimsPrincipal

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body,
        html {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        .bg-custom {
            background-color: #5125d2;
            height: 100%;
        }


    </style>
</head>

<body>
    @if (signInManager.IsSignedIn(User))
    {
        <div class="container-fluid h-100 bg-custom position-relative">
            <div class="row h-100 align-items-center">
                <div class="col-md-6 offset-md-3 text-center">
                    <img src="~/images/rocket.png" class="img-fluid mb-5" style="width: 338px; height: 338px;">
                    <h1 class="text-white fw-bold fs-1">Welcome @User.Identity.Name at the LLP.</h1>
                    <h2 class="text-white fw-bold fs-3 mt-3">Let’s do this.</h2>
                    <div class="mt-5">
                        <button class="btn btn-outline-dark btn-lg" style="width: 320px;">
                            <a asp-action="LearningPage" asp-controller="Home" style="text-decoration: none; color: white;">
                                Start Lesson
                            </a>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</body>

</html>

