@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> signInManager

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <style>
        nav {
            border-bottom: 1px solid #000;
            background-color: #5125D2;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top" style="background-color: #5125D2;">
            <div class="container-fluid">
                <a class="navbar-brand me-5" href="#">
                    <img src="~/images/Logo.png" alt="Bootstrap" width="60" height="45">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item d-flex align-items-center">
                            <img src="/images/OpenBook.png" alt="Logo" width="30" height="24" style="margin-right: 1px;">
                            <a class="nav-link active" aria-current="page" asp-action="LearningPage" asp-controller="Home" style="color: white;">Learn</a>
                        </li>
                    </ul>
                    @if (signInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav ms-auto">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="/images/bussiness-man.png" alt="User" width="30" height="30" style="border-radius: 50%; margin-right: 5px;">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item text-white" asp-action="Dashboard" asp-controller="Home" style="background-color: #5125D2;">Dashboard</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-white" asp-action="ContactUs" asp-controller="Home" style="background-color: #5125D2;">Contact Us</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text-white" asp-action="Logout" asp-controller="RegistrationAndLogin" style="background-color: #5125D2;">Logout</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div>
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

