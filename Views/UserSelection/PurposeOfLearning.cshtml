@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container-fluid bg-white">
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-5">
            <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-4">
            <h1 class="fs-1 fw-bold">Tell Us about you!</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-3">
            <span class="fs-2 fw-bold">Hi </span><span class="text-primary fs-2 fw-bold">AMS</span><span class="fs-2 fw-bold">, Why are you learning Spanish?</span>
        </div>
    </div>
    <div class="text-center mb-4">
        <p style="color: #88889D; font-size: 20px">Assistance in personalising your path to learning.</p>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/job.png" alt="Work" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Work</h5>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/school.png" alt="School" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">School</h5>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/travel.png" alt="Travel" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Travel</h5>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/culture.png" alt="Culture" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Culture</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/family.png" alt="Family & Community" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Family & Community</h5>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/challengeMyself.png" alt="Challenge Myself" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Challenge Myself</h5>
                </div>
            </div>
        </div>
        <div class="col-4 col-md-3 col-lg-2 mb-5">
            <div class="card text-center">
                <img src="~/images/others.png" alt="Other" class="card-img-top" style="width: 150px;">
                <div class="card-body">
                    <h5 class="card-title">Other</h5>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <a asp-controller="UserSelection" asp-action="LanguageKnowledge">
            <button class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px; font-weight:bold;">Continue</button>
        </a>
    </div>
</div>
