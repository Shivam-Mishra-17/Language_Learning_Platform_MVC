@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-5">
            <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-4">
            <h1 class="fw-bold">Set a daily study goal!</h1>
        </div>
    </div>
    <div class="text-center mb-4">
        <p style="color: #88889D; font-size: 15px">Create a learning habit to improve your Spanish.</p>
    </div>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">5 minutes / day</h5>
                        <p class="card-text">Casual</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">10 minutes / day</h5>
                        <p class="card-text">Regular</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">15 minutes / day</h5>
                        <p class="card-text">Serious</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">20 minutes / day</h5>
                        <p class="card-text">Intense</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <a asp-controller="UserSelection" asp-action="WelcomePage">
            <button class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px; font-weight:bold;">Commit to daily Goal</button>
        </a>
    </div>
</div>
