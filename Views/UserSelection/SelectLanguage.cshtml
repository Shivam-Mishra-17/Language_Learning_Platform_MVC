@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container-fluid bg-white">
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-5">
            <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-4">
            <h1 class="fs-1 fw-bold">What would you like to learn</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/english.png" alt="English" class="mb-3">
                    <h2 class="fs-5">English</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/spanish.png" alt="Spanish" class="mb-3">
                    <h2 class="fs-5">Spanish</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/arabic.png" alt="Arabic" class="mb-3">
                    <h2 class="fs-5">Arabic</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/russian.png" alt="Russian" class="mb-3">
                    <h2 class="fs-5">Russian</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/chinese.png" alt="Chinese" class="mb-3">
                    <h2 class="fs-5">Chinese</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/france.png" alt="French" class="mb-3">
                    <h2 class="fs-5">French</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/italian.png" alt="Italian" class="mb-3">
                    <h2 class="fs-5">Italian</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/japan.png" alt="Japanese" class="mb-3">
                    <h2 class="fs-5">Japanese</h2>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-4 col-lg-3 mb-5">
            <div class="card">
                <div class="card-body text-center">
                    <img src="~/images/flags/korean.png" alt="Korean" class="mb-3">
                    <h2 class="fs-5">Korean</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <a asp-controller="UserSelection" asp-action="PurposeOfLearning">
            <button class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px; font-weight:bold;">Continue</button>
        </a>
    </div>

</div>