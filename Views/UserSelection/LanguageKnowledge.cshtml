@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container-fluid bg-white">
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-5">
            <img src="~/images/Logo.png" alt="Logo" width="99" height="74">
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-4">
            <h1 class="fs-1 fw-bold">Tell Us about you!</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-12 text-center mt-3">
            <h2 class="fs-1 fw-bold">How much Spanish do you know?</h2>
        </div>
    </div>
    <div class="text-center mb-4">
        <p style="color: #88889D; font-size: 20px">Learn what you need to travel with confidence.</p>
    </div>
    <div class="row justify-content-center mb-5">
        <div class="col d-flex justify-content-center">
            <div class="card text-center" style="width: 310px;">
                <div class="card-body">
                    <img src="~/images/finish-flag.png" alt="I’m a Beginner" class="mt-3">
                    <h5 class="card-title fs-4 fw-bold">I’m a Beginner</h5>
                    <p class="card-text fs-5" style="color: #88889D;">Start with the basics</p>
                </div>
            </div>
        </div>
        <div class="col d-flex justify-content-center">
            <div class="card text-center" style="width: 310px;">
                <div class="card-body">
                    <img src="~/images/book.png" alt="I know Some Spanish" class="mt-3">
                    <h5 class="card-title fs-4 fw-bold">I know Some Spanish</h5>
                    <p class="card-text fs-5" style="color: #88889D;">Find Your Level</p>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-4 d-flex justify-content-center">
        <a asp-controller="UserSelection" asp-action="DailyGoals">
            <button class="btn btn-lg btn-block" style="background-color: #EEE9FB; color: #5125D2; width: 348px; font-weight:bold;">Continue</button>
        </a>
    </div>
</div>

