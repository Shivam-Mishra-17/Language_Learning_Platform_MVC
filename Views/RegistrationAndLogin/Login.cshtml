@using LearningLanguagePlatform.ViewModels
@model LoginVM

@{
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<div class="container-fluid">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-5 text-center">
            <img src="~/images/Logo.png" height="74px" width="99px" class="img-fluid mb-4" alt="Logo">
            <h2>Login!</h2>
            <p>Don’t Have an account ? <a style="text-decoration: underline; color: black;" asp-controller="RegistrationAndLogin" asp-action="Registration">Sign up</a></p>
            <div class="row justify-content-center mt-3">
                <div class="col-md-8">
                    <button class="btn btn-light text-center border border-dark rounded-pill" style="width: 326px; height: 40px;">
                        <img src="~/images/google.png" alt="Google Logo" width="30" height="30" class="me-3">
                        Connect With Google
                    </button>
                </div>
            </div>
            <div class="row justify-content-center mt-3">
                <div class="col-md-8">
                    <button class="btn btn-light text-center border border-dark rounded-pill" style="width: 326px; height: 40px;">
                        <img src="~/images/facebook.png" alt="Facebook Logo" width="30" height="30" class="me-3">
                        Connect With Facebook
                    </button>
                </div>
            </div>
            <div class="mt-3">
                <p style="color: black;">----------------------- OR -----------------------</p>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <form asp-action="Login" method="post">
                <div class="mb-3 d-flex justify-content-center">
                    <input asp-for="Email" type="text" class="form-control" style="width: 326px;" placeholder="Enter Your Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <input asp-for="Password" type="password" class="form-control" style="width: 326px;" placeholder="Enter Your Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 d-flex justify-content-center">
                    <p style="color: black;">Forgot Your Password ?</p>
                </div>
                <button class="btn btn-block text-center" style="background-color: #EEE9FB; color: #5125D2; width: 326px;">Login</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
